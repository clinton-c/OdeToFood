<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" type="text/css" rel="stylesheet" />

</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <img src="@Url.Content("~/Content/images/OdeToFood.png")" alt="OdeToFood" />
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
                
            <div id="menucontainer">                
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Restaurants", "Index", "Restaurant")</li>                   
                    <li>@Html.ActionLink("Reviews", "Index", "Reviews")</li>
                </ul>                
            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">   
            @RenderSection("Footer", false)          
            </div>
        </div>
    </div>
    @Content.Script("jquery-1.4.4.min.js", Url)
    @Content.Script("jquery.unobtrusive-ajax.min.js", Url)
    @Content.Script("jquery-ui.min.js", Url)
    @Content.Script("jQuery.tmpl.min.js", Url)
    @Content.Script("odetofood.js", Url)
    @RenderSection("scripts", false)
</body>
</html>


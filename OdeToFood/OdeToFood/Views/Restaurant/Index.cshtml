@model IEnumerable<OdeToFood.Models.Restaurant>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "Restaurant", FormMethod.Get))
{
    @Html.DropDownList("state", new SelectList(ViewBag.States)) 
    <input type="submit" value="Filter" />
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Address
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Address.City, @item.Address.State 
        </td>
    </tr>
}

</table>

@Html.ActionLink("Show restaurants in MD", "Index", "Restaurant", new { state = "MD" }, null)
